<Window x:Class="MVSPO_DZ_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVSPO_DZ_2"
        mc:Ignorable="d"
        Title="ZXC Translator" Height="250" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/math.jpeg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="AddStringTextBox" Height="40" Width="350" Grid.Row="0" BorderBrush="Black"></TextBox>
        <Button Name="ApplyButton" Grid.Row="1" Height="50" Width="150" Content="Принять" Margin="0,0,0,40" Click="ApplyButton_Click"></Button>
        <TextBlock Name="AfterStringBlock" Grid.Row="1" Height="30" Width="380" Text="Ваше число:" Margin="0,60,0,0" FontSize="16" TextAlignment="Center" Foreground="White" Background="#FF5B3878"/>
    </Grid>
</Window>
